<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsEventActivity"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:layout_weight="1"
        android:foreground="@drawable/plane" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/event_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/event_detail_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="138dp"
                android:layout_height="100dp"
                android:background="@android:color/white"
                android:onClick="onChatPressed"
                app:srcCompat="@drawable/chat_event" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="138dp"
                android:layout_height="100dp"
                android:background="#FFFFFFFF"
                android:onClick="onCashPressed"
                app:srcCompat="@drawable/cash" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="135dp"
                android:layout_height="100dp"
                android:background="#FFFFFFFF"
                android:onClick="onInfoPressed"
                app:srcCompat="@drawable/info_event" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:background="#FFFFFFFF"
                android:onClick="onFriendPressed"
                app:srcCompat="@drawable/group" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:background="#FFFFFFFF"
                android:onClick="onSettingPressed"
                app:srcCompat="@drawable/settings_event" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:background="#FFFFFFFF"
                android:onClick="onSurveyPressed"
                app:srcCompat="@drawable/survey" />
        </TableRow>

    </TableLayout>

</LinearLayout>